<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="sdSeekBar" parent="android:style/Widget.Holo.SeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:splitTrack">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:thumb">@drawable/fader_thumb</item>
        <item name="android:progressDrawable">@drawable/bg_custom_seekbar</item>
        <item name="android:progressTint">#6f6f6f</item>
    </style>

    <style name="sdEditNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">2</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="eqSeekBar" parent="sdSeekBar">
        <item name="android:max">7</item>
        <item name="android:progress">4</item>
    </style>

    <style name="sdRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <!--item name="android:textAppearance">@android:style/TextAppearance.Holo.Light.Small</item-->
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="gridToggleText" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="ThemeCustom.TabLayout" parent="Theme.MaterialComponents.Light"/>


</resources>