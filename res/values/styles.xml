<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="sdSeekBar" parent="android:Widget.SeekBar">
        <item name="android:indeterminateBehavior">cycle</item>
        <item name="android:indeterminateTint">#afafaf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">60</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:progress">30</item>
        <item name="android:progressBackgroundTint">#6f6f6f</item>
        <item name="android:progressBackgroundTintMode">src_in</item>
        <item name="android:progressTint">#6f6f6f</item>
        <item name="android:progressTintMode">src_in</item>
        <item name="android:splitTrack">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="sdEditNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">2</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="eqSeekBar" parent="android:Widget.SeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">7</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:progress">4</item>  n
        <item name="android:progressBackgroundTint">#6f6f6f</item>
        <item name="android:progressBackgroundTintMode">src_in</item>
        <item name="android:progressTint">#6f6f6f</item>
        <item name="android:progressTintMode">src_in</item>
        <item name="android:splitTrack">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="sdRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <!--item name="android:textAppearance">@android:style/TextAppearance.Holo.Light.Small</item-->
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="gridToggleText" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="ThemeCustom.TabLayout" parent="Theme.MaterialComponents.Light"/>


</resources>